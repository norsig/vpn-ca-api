# OpenVPN Server Configuration for {{ cn|e }}

dev tun

proto udp
#proto tcp-server

port 1194
#port 443

tls-server

# IPv4
server 10.8.0.0 255.255.255.0
push "redirect-gateway def1 block-local"

# IPv6
#server-ipv6 2001:aaaa:bbbb:cccc::/64
#push "route-ipv6 2000::/3"

topology subnet
comp-lzo
persist-key
persist-tun
verb 3
max-clients 100
keepalive 30 60
user openvpn
group openvpn
key-direction 0
auth SHA256
script-security 1
crl-verify /etc/openvpn/ca.crl

{% for nameserver in nameservers %}
push "dhcp-option DNS {{ nameserver|e }}"
{% endfor %}
push "dhcp-option DISABLE-NBT"
push "dhcp-option NTP {{ ntpserver|e }}"

<ca>
{{ ca|e }}
</ca>
<cert>
{{ cert|e }}
</cert>
<key>
{{ key|e }}
</key>
<dh>
{{ dh|e }}
</dh>
<tls-auth>
{{ ta|e }}
</tls-auth>
