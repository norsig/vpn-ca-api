# OpenVPN Server Configuration for {{ cn|e }}

dev tun
proto udp
port 1194
server {{ network|e }} {{ netmask|e }}
push "redirect-gateway def1"
comp-lzo
persist-key
persist-tun
verb 3
max-clients 100
keepalive 30 60
user openvpn
group openvpn
;crl-verify /etc/openvpn/ca.crl

{% for nameserver in nameservers %}
push "dhcp-option DNS {{ nameserver|e }}"
{% endfor %}

<ca>
{{ ca|e }}
</ca>
<cert>
{{ cert|e }}
</cert>
<key>
{{ key|e }}
</key>
<dh>
{{ dh|e }}
</dh>
