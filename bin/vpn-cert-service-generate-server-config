require_once dirname(__DIR__).'/vendor/autoload.php';

use fkooman\Ini\IniReader;
use fkooman\Tpl\Twig\TwigTemplateManager;

try {
    // get common name from first parameter
    if (2 > $argc) {
        throw new Exception(sprintf('Syntax: %s [CN]', $argv[0]));
    }
    $commonName = $argv[1];

    $iniReader = IniReader::fromFile(
        dirname(__DIR__).'/config/config.ini'
    );

    $caBackend = $iniReader->v('caBackend', false, 'EasyRsa2');
    $caBackendClass = sprintf('\\fkooman\\VPN\\%s', $caBackend);
    $ca = new $caBackendClass($iniReader->v($caBackend));

    $certKeyDh = $ca->generateServerCert($commonName, $iniReader->v('CA', 'key_size'));
    $tlsAuth = $ca->getTlsAuthKey();

    $configData = array(
        'cn' => $commonName,
        'ca' => $ca->getCaCert(),
        'cert' => $certKeyDh['cert'],
        'key' => $certKeyDh['key'],
        'dh' => $certKeyDh['dh'],
        'ta' => $tlsAuth,
    );
    $templateManager = new TwigTemplateManager(
        array(
            dirname(__DIR__).'/views',
            dirname(__DIR__).'/config/views',
        ),
        null
    );
    echo $templateManager->render('server', $configData);
} catch (Exception $e) {
    echo $e->getMessage().PHP_EOL;
    exit(1);
}
