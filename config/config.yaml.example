# CA backend
caBackend: EasyRsa3Ca

# API credentials
Api:
    vpn-user-portal:
        token: abcdef
        scope: issue_client revoke_client list
    vpn-admin-portal:
        token: fedcba
        scope: list
    vpn-server-api:
        token: aabbcc
        scope: issue_server crl

EasyRsa3Ca:
    easyRsaPath: /usr/share/easy-rsa/3
    caPath: /var/lib/vpn-config-api/easy-rsa
    openVpnPath: /usr/sbin/openvpn
    CA:
        key_size: '4096'
        ca_expire: '1826'
        cert_expire: '365'
        ca_cn: VPN CA
