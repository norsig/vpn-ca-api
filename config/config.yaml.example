BasicAuthentication:
    admin: $2y$10$QAmpESWTDujaLOlZ/FUwBO6EnmP797QPmz8bYRf9UCRyVmI494Vd2

EasyRsa2Ca:
    # CentOS (default)
    # for Debian use /usr/share/easy-rsa    
    sourcePath: /usr/share/easy-rsa/2.0
    targetPath: /var/lib/vpn-config-api/easy-rsa
    openVpnPath: /usr/sbin/openvpn
    CA:
        key_size: '4096'
        ca_expire: '1826'
        key_expire: '365'
        key_country: US
        key_province: CA
        key_city: SanFrancisco
        key_org: Fort-Funston
        key_email: me@myhost.mydomain
        key_ou: MyOrganizationalUnit

EasyRsa3Ca:
    # Fedora (default)
    easyRsaPath: /usr/share/easy-rsa/3.0.0
    caPath: /var/lib/vpn-config-api/easy-rsa
    openVpnPath: /usr/sbin/openvpn
    CA:
        key_size: '4096'
        ca_expire: '1826'
        cert_expire: '365'
        ca_cn: VPN CA
